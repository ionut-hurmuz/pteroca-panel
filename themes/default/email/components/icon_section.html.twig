<table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="margin: 0 0 24px 0;">
    <tr>
        <td align="center" style="padding: 8px 0 24px 0;">
            <table role="presentation" cellspacing="0" cellpadding="0" border="0">
                <tr>
                    <td align="center" style="width: 64px; height: 64px; border-radius: 50%; background-color: {{ iconColor }}1a; text-align: center; vertical-align: middle;">
                        <span style="font-size: 32px; line-height: 64px; color: {{ iconColor }};">{{ icon }}</span>
                    </td>
                </tr>
            </table>

            <h2 style="margin: 16px 0 {% if message is defined and message %}8px{% else %}0{% endif %}; font-size: 24px; font-weight: 600; color: #1a1a1a; line-height: 1.3;">
                {{ title }}
            </h2>

            {% if message is defined and message %}
            <p style="margin: 0; font-size: 16px; color: #6b7280; line-height: 1.5;">
                {{ message }}
            </p>
            {% endif %}
        </td>
    </tr>
</table>
