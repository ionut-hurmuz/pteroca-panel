{% extends 'email/layout/base.html.twig' %}
{% trans_default_domain 'messages' %}

{% set emailTitle = 'pteroca.email.suspended.subject'|trans %}

{% block content %}
    {% include 'email/components/icon_section.html.twig' with {
        icon: 'âš ',
        iconColor: '#f59e0b',
        title: 'pteroca.email.suspended.subject'|trans,
        message: 'pteroca.email.suspended.subtitle'|trans
    } %}

    {% include 'email/components/alert.html.twig' with {
        type: 'danger',
        message: 'pteroca.email.suspended.server_suspended'|trans
    } %}

    {% include 'email/components/table.html.twig' with {
        rows: [
            {label: 'pteroca.email.suspended.server_details'|trans, value: '<strong>' ~ serverName ~ '</strong>'},
            {label: 'pteroca.email.suspended.suspension_date_label'|trans, value: suspensionDate|date('Y-m-d H:i')}
        ]
    } %}

    {% if autoDeleteEnabled and deleteAfterDays and deleteDate %}
        {% include 'email/components/alert.html.twig' with {
            type: 'warning',
            title: 'pteroca.email.suspended.auto_delete_title'|trans,
            message: 'pteroca.email.suspended.auto_delete_warning'|trans({
                '%days%': deleteAfterDays,
                '%deleteDate%': deleteDate|date('Y-m-d H:i')
            })
        } %}
    {% endif %}

    <p style="text-align: center; color: #374151; font-size: 16px; margin: 24px 0;">
        {{ 'pteroca.email.suspended.extend_server'|trans }}
    </p>

    {% include 'email/components/button.html.twig' with {
        url: panelUrl,
        text: 'pteroca.email.suspended.panel_access'|trans
    } %}
{% endblock %}
